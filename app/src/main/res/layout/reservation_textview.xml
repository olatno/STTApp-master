<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/textView_reservationId">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_name"
            android:id="@+id/textView_name"
            android:layout_marginStart="30dp" android:textColor="#535353" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="230dp"
            android:layout_weight="1" android:layout_marginTop="12dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rerser_package"
            android:id="@+id/textView_package"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="53dp" android:textColor="#535353"
            android:layout_weight="1" android:layout_alignBottom="@+id/textView_name" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arrival_date"
            android:id="@+id/textView_arrival" android:layout_weight="1"
            android:clickable="true" android:elegantTextHeight="false"
            android:textColor="#535353" android:layout_below="@+id/textView_name"
            android:layout_alignStart="@+id/textView_name" android:layout_marginBottom="12dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reser_number"
            android:id="@+id/textView_number"
            android:textColor="#535353" android:layout_weight="1"
            android:layout_below="@+id/textView_package" android:layout_alignStart="@+id/textView_package"/>
</RelativeLayout>